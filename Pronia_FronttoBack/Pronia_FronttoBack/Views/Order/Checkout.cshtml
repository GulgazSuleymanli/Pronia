
@model OrderVM

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Checkout Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Checkout</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="checkout-area section-space-y-axis-100">
        <div class="container">
            
            <div class="row">
                <div class="col-lg-6 col-12">
                    <form id="billing-form" method="post">
                        <div class="checkbox-form">
                            <h3>Billing Details</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label asp-for="Name">First Name<span class="required">*</span></label>
                                        <input asp-for="Name" placeholder="" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="checkout-form-list">
                                        <label asp-for="Surname">Last Name<span class="required">*</span></label>
                                        <input asp-for="Surname" placeholder="" />
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label asp-for="Email">Email<span class="required">*</span></label>
                                        <input asp-for="Email" placeholder="" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label asp-for="Address">Address<span class="required">*</span></label>
                                        <input asp-for="Address" placeholder="" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 col-12">
                    <div class="your-order">
                        <h3>Your order</h3>
                        <div class="your-order-table table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="cart-product-name">Product</th>
                                        <th class="cart-product-total">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CheckoutItemVMs)
                                    {
                                        <tr class="cart_item">
                                            <td class="cart-product-name">
                                                @item.Name<strong class="product-quantity">
                                                    × @item.Count
                                                </strong>
                                            </td>
                                            <td class="cart-product-total">
                                                <span class="amount">$@(item.Price*item.Count)</span>
                                            </td>
                                        </tr>
                                    }
                                    
                                </tbody>
                                <tfoot>
                                    <tr class="order-total">
                                        <th>Order Total</th>
                                        <td>
                                            <strong><span class="amount">$@Model.CheckoutItemVMs.Sum(p=>p.Price*p.Count)</span></strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="payment-method">
                            <div class="payment-accordion">
                                
                                <div class="order-button-payment">
                                    <button form="billing-form" value="Place order" type="submit" class="btn btn-dark">Place Order</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>