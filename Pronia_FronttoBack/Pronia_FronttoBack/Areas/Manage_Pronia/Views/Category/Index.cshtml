@model List<Category>
@{
    int count = 0;
}


<div class="container pt-3">
    <div class="d-flex justify-content-around">
        <h3>Categories</h3>
        <a class="btn btn-success" asp-controller="Category" asp-action="Create">Create</a>
    </div>
    <table class="table table-secondary table-striped text-dark">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Products count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Products.Count</td>
                    <td><a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>