@model Slider

<div class="container pt-3">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-4">
                <label asp-for="Title" class="form-label">Title</label>
                <input class="form-control" asp-for="Title">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-4">
                <label asp-for="Offer" class="form-label">Offer</label>
                <input class="form-control" asp-for="Offer">
                <span asp-validation-for="Offer" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-4">
                <label asp-for="ImageFile" class="form-label">ImageFile</label>
                <input class="form-control" asp-for="ImageFile">
                <span asp-validation-for="ImageFile" style="color:red"></span>
            </div>
        </div>
        <div class="row align-items-center ">
            <div class="mb-3  col-md-4">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>