@model List<Slider>
@{
    int count = 0;
}


<div class="container pt-3">
    <div class="d-flex justify-content-around">
        <h3>Sliders</h3>
        <a class="btn btn-success" asp-controller="Slider" asp-action="Create">Create</a>
    </div>
    <table class="table table-secondary table-striped text-dark">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Decsription</th>
                <th scope="col">Offer</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Offer</td>
                    <td>@item.ImageUrl</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>